<% while item_cat.children.size > 0 %>
  <% first_child_cat = item_cat.children.first %>
  <div id='item_cat_level<%=item_cat.id%>'>
    <%= label_tag :seller_cats_id,"" %>
    <%= select_tag :seller_cats_id,options_from_collection_for_select(item_cat.children, 'id', 'name'),:onchange => remote_function(:update => "item_cat_level#{first_child_cat.id}",:method => :get,:with => "'id=' + value",:url => {:controller =>:item_cats,:action => :children}) %>
  </div>
  <% item_cat = first_child_cat %>
<% end%>
