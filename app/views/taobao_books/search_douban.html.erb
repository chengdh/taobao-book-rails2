<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "查书", search_douban_taobao_books_path %></li>
    </ul>
  </div>          
  <%@debug_rsp.each do |start,n_items|%>
    <p><%="#{start}: #{n_items.total_results}"%></p>
  <%end%>
  <div class="content">          
    <h2 class="title">去豆瓣查查看有没有我要卖的书</h2>
    <div class="inner">
      <% form_tag index_douban_taobao_books_path,:method => :get ,:class => "uniForm",:id => 'search_form' do %>
        <fieldset class='blockLabels'>
          <legend>请录入10位或13位ISBN编号</legend>
          <% 10.times do |i|%>
            <div class='ctrlHolder'>
              <%= text_field_tag "isbns[]",nil,:size => 13,:maxlength => 13,:class => 'textInput' %>
            </div>
          <%end%>

        </fieldset>
        <div class='actions-bar'>
          <%= submit_tag "去豆瓣查查...",:class => 'sexybutton sexysimple sexybig sexygreen' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'side_bar_search') -%>
